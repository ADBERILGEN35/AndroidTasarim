<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAraba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp">

            <ImageView
                android:id="@+id/imageAraba"
                android:layout_width="199dp"
                android:layout_height="117dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/araba1" />

            <TextView
                android:id="@+id/textFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="₺365.000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageAraba" />

            <TextView
                android:id="@+id/textAciklama"
                android:layout_width="163dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:text="* Son Fiyat * 2020 Model Hasarsız. Sedan 120hp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFiyat" />

            <TextView
                android:id="@+id/textLokasyon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="İzmir - Konak"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageLokasyon"
                app:layout_constraintTop_toBottomOf="@+id/textAciklama" />

            <ImageView
                android:id="@+id/imageTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageLokasyon"
                app:srcCompat="@drawable/ic_baseline_calendar_view_day_24" />

            <TextView
                android:id="@+id/textTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="2020"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageTarih"
                app:layout_constraintTop_toBottomOf="@+id/textLokasyon" />

            <ImageView
                android:id="@+id/imageKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageTarih"
                app:srcCompat="@drawable/ic_baseline_timer_24" />

            <TextView
                android:id="@+id/textKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="11.836 km"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageKm"
                app:layout_constraintTop_toBottomOf="@+id/textTarih" />

            <ImageView
                android:id="@+id/imageLokasyon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAciklama"
                app:srcCompat="@drawable/ic_baseline_location_on_24" />

            <Button
                android:id="@+id/buttonDetaylar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Detaylar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textKm" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>